<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:id="@+id/iconLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3BC6F5" >

            <ImageView
                android:id="@+id/homeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/headerMsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iconLayout"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iconLayout"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:text="hello"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reportSummaryHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/headerMsg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#40AD63"
            android:text=" Expense Summary  "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reportSummaryCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reportSummaryHeader"
            android:layout_below="@+id/reportSummaryHeader"
            android:layout_marginTop="5dp"
            android:text="cost"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/perHeadContributionHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/reportSummaryCost"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#40AD63"
            android:text=" + Member&apos;s Contribution Per Head  "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reportSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/perHeadContributionHeader"
            android:layout_below="@+id/perHeadContributionHeader"
            android:layout_marginTop="5dp"
            android:text="report"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/balanceSummaryHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/reportSummary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#40AD63"
            android:text=" + Balance Summary  "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/balanceSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/balanceSummaryHeader"
            android:layout_below="@+id/balanceSummaryHeader"
            android:layout_marginTop="5dp"
            android:text="balance"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/individualSummaryHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/balanceSummary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#03A336"
            android:text=" + Individual Expense Summary "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/individualSummaryDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/individualSummaryHeader"
            android:layout_below="@+id/individualSummaryHeader"
            android:layout_marginTop="5dp"
            android:text="individual"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/reportDetailHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/individualSummaryDetail"
            android:layout_below="@+id/individualSummaryDetail"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#03A336"
            android:text=" + Expense Details  "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reportDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reportDetailHeader"
            android:layout_below="@+id/reportDetailHeader"
            android:layout_marginTop="5dp"
            android:text="report"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sendMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reportDetail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/mail_icon" />

        <TextView
            android:id="@+id/footerMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sendMail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/footer_msg" />
    </RelativeLayout>

</ScrollView>