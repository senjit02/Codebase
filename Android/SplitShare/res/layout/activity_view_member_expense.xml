<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <RelativeLayout
            android:id="@+id/iconLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3BC6F5" >

            <ImageView
                android:id="@+id/homeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/home_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/headerMsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iconLayout"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iconLayout"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"
            android:text="hello"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseSummaryHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/headerMsg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#40AD63"
            android:text=" - Expense Detail  "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/expenseSummaryHeader"
            android:layout_below="@+id/expenseSummaryHeader"
            android:layout_marginTop="10dp"
            android:text=" Total expense"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expenseDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/expenseSummary"
            android:layout_below="@+id/expenseSummary"
            android:layout_marginTop="5dp"
            android:text=" Expense Detail"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/advanceSummaryHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/expenseDetail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#03A336"
            android:text=" + Advance Given Summary "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/advanceSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/advanceSummaryHeader"
            android:layout_below="@+id/advanceSummaryHeader"
            android:layout_marginTop="10dp"
            android:text="  Total advance given"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/advanceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/advanceSummary"
            android:layout_below="@+id/advanceSummary"
            android:layout_marginTop="5dp"
            android:text=" Advance given details"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/advanceTakenSummaryHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/advanceDetail"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#03A336"
            android:text=" + Advance Taken Summary "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/advanceTakenSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/advanceTakenSummaryHeader"
            android:layout_below="@+id/advanceTakenSummaryHeader"
            android:layout_marginTop="10dp"
            android:text="  Total advance taken"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/advanceTakenDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/advanceTakenSummary"
            android:layout_below="@+id/advanceTakenSummary"
            android:layout_marginTop="5dp"
            android:text=" Advance taken details"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/footerMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advanceTakenDetail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/footer_msg" />
    </RelativeLayout>

</ScrollView>