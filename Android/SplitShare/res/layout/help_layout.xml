<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"  >
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#D6D5CE">
<RelativeLayout 
   android:id="@+id/crossImageLayout" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#797E80">    
<ImageView
        android:id="@+id/crossImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@android:drawable/ic_delete" />
</RelativeLayout>
<TextView
    android:id="@+id/headerMsg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/crossImageLayout"
    android:layout_marginTop="1dp"
    android:textStyle="bold"
    android:background="@android:color/darker_gray"
    android:text="\tUser guide for Split-N-Share\n\n" />

<TextView
    android:id="@+id/helpMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/headerMsg"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="22dp"
    android:text="TextView" />


</RelativeLayout>
</ScrollView>