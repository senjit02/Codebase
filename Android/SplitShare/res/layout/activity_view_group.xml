<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"  >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/common_bg">

     <RelativeLayout 
   android:id="@+id/iconLayout" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3BC6F5">
    
    <ImageView
        android:id="@+id/homeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/home_icon" />
    </RelativeLayout> 
     <TextView
        android:id="@+id/headerMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconLayout"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"
        android:textStyle="bold"
        android:text="   Group Details" />
   
    
      <TextView
        android:id="@+id/groupDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/headerMsg"
        android:layout_below="@+id/headerMsg"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:text="" />

      <ImageView
          android:id="@+id/groupUpdate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/groupDetail"
          android:layout_marginTop="20dp"
          android:src="@drawable/update_group" />

      <ImageView
          android:id="@+id/addMember"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/groupUpdate"
          android:layout_centerHorizontal="true"
          android:src="@drawable/add_group_member" />

      <ImageView
          android:id="@+id/viewMember"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignRight="@+id/headerMsg"
          android:layout_alignTop="@+id/addMember"
          android:layout_marginRight="14dp"
          android:src="@drawable/view_group_member" />

      <ImageView
          android:id="@+id/addExpense"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/groupDetail"
          android:layout_below="@+id/groupUpdate"
          android:layout_marginTop="70dp"
          android:src="@drawable/add_expense" />

      <ImageView
          android:id="@+id/updateExpense"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/addExpense"
          android:layout_below="@+id/addMember"
          android:layout_alignLeft="@+id/addMember"
          android:layout_marginTop="70dp"
          android:src="@drawable/expense_update" />

      <ImageView
          android:id="@+id/getExpense"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/viewMember"
          android:layout_below="@+id/viewMember"
          android:layout_marginTop="55dp"
          android:layout_alignBottom="@+id/addExpense"
          android:src="@drawable/expense_histroy" />
      <ImageView
          android:id="@+id/deleteGroup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/updateExpense"
          android:layout_below="@+id/updateExpense"
          android:layout_marginTop="50dp"
          android:src="@drawable/delete_group" />

      <TextView
          android:id="@+id/footerMsg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/deleteGroup"
          android:layout_centerHorizontal="true"
         android:layout_marginTop="20dp"
     	android:text="@string/footer_msg"/>

</RelativeLayout>
</ScrollView>